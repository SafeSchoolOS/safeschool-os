model SiteLicense {
  id                String   @id @default(uuid())
  siteId            String   @unique @map("site_id")
  // Free features: visitor check-in/out, screening, visitor logs (always enabled)
  // Paid features:
  badgePrinting     Boolean  @default(false) @map("badge_printing")
  guardConsole      Boolean  @default(false) @map("guard_console")
  // License metadata
  licenseKey        String?  @map("license_key")
  expiresAt         DateTime? @map("expires_at")
  maxKiosks         Int      @default(1) @map("max_kiosks")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  site Site @relation(fields: [siteId], references: [id])

  @@map("site_licenses")
}

