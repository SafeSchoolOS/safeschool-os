  BULLYING_CYBER
  DRUG_REFERENCE
  SEXUAL_CONTENT
  HATE_SPEECH
  SCHOOL_THREAT
  WEAPON_REFERENCE
  OTHER
}

enum SocialMediaAlertStatus {
  NEW
  REVIEWING
  CONFIRMED
  FALSE_POSITIVE
  ESCALATED
  RESOLVED
}

