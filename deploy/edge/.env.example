# === SafeSchool OS — Edge Configuration ===
# Copy to .env and fill in values before running install.sh

# Site Identity
SITE_NAME=My School
SITE_ID=

# EdgeRuntime Activation (optional — enables cloud sync features)
EDGERUNTIME_ACTIVATION_KEY=

# Database (auto-generated by install.sh)
DB_PASSWORD=

# Auth
JWT_SECRET=
AUTH_PROVIDER=dev

# 911 Dispatch
DISPATCH_ADAPTER=console
RAPIDSOS_CLIENT_ID=
RAPIDSOS_CLIENT_SECRET=
RAVE_API_KEY=
RAVE_ORGANIZATION_ID=
SIP_TRUNK_HOST=
SIP_LOCAL_DOMAIN=
CELLULAR_DEVICE_PATH=

# Access Control
ACCESS_CONTROL_ADAPTER=mock
AC_API_URL=
AC_API_KEY=

# Notifications
NOTIFICATION_ADAPTER=console
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Auto-update (Watchtower)
WATCHTOWER_POLL_INTERVAL=3600
WATCHTOWER_CLEANUP=true
WATCHTOWER_NOTIFICATION_URL=
