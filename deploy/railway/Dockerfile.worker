FROM node:20-alpine AS builder

WORKDIR /app
COPY package.json turbo.json tsconfig.json ./
COPY packages/ ./packages/
COPY apps/ ./apps/

RUN DATABASE_URL="postgresql://dummy:dummy@localhost:5432/dummy" npm install --legacy-peer-deps
RUN DATABASE_URL="postgresql://dummy:dummy@localhost:5432/dummy" npx prisma generate --schema=packages/db/prisma/schema.prisma
RUN npx turbo run build --filter='./packages/**'

FROM node:20-alpine AS runner

WORKDIR /app
ENV NODE_ENV=production
ENV OPERATING_MODE=cloud

# Copy all workspace packages (dist + package.json for Node module resolution)
COPY --from=builder /app/packages/api/dist ./packages/api/dist
COPY --from=builder /app/packages/api/package.json ./packages/api/package.json
COPY --from=builder /app/packages/core/dist ./packages/core/dist
COPY --from=builder /app/packages/core/package.json ./packages/core/package.json
COPY --from=builder /app/packages/db/dist ./packages/db/dist
COPY --from=builder /app/packages/db/package.json ./packages/db/package.json
COPY --from=builder /app/packages/db/prisma ./packages/db/prisma
COPY --from=builder /app/packages/edge/dist ./packages/edge/dist
COPY --from=builder /app/packages/edge/package.json ./packages/edge/package.json
COPY --from=builder /app/packages/integrations/access-control/dist ./packages/integrations/access-control/dist
COPY --from=builder /app/packages/integrations/access-control/package.json ./packages/integrations/access-control/package.json
COPY --from=builder /app/packages/integrations/dispatch/dist ./packages/integrations/dispatch/dist
COPY --from=builder /app/packages/integrations/dispatch/package.json ./packages/integrations/dispatch/package.json
COPY --from=builder /app/packages/integrations/notifications/dist ./packages/integrations/notifications/dist
COPY --from=builder /app/packages/integrations/notifications/package.json ./packages/integrations/notifications/package.json
COPY --from=builder /app/packages/integrations/visitor-mgmt/dist ./packages/integrations/visitor-mgmt/dist
COPY --from=builder /app/packages/integrations/visitor-mgmt/package.json ./packages/integrations/visitor-mgmt/package.json
COPY --from=builder /app/packages/integrations/transportation/dist ./packages/integrations/transportation/dist
COPY --from=builder /app/packages/integrations/transportation/package.json ./packages/integrations/transportation/package.json
COPY --from=builder /app/packages/integrations/grants/dist ./packages/integrations/grants/dist
COPY --from=builder /app/packages/integrations/grants/package.json ./packages/integrations/grants/package.json
COPY --from=builder /app/packages/integrations/cameras/dist ./packages/integrations/cameras/dist
COPY --from=builder /app/packages/integrations/cameras/package.json ./packages/integrations/cameras/package.json
COPY --from=builder /app/packages/integrations/threat-intel/dist ./packages/integrations/threat-intel/dist
COPY --from=builder /app/packages/integrations/threat-intel/package.json ./packages/integrations/threat-intel/package.json
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./

HEALTHCHECK --interval=60s --timeout=10s --retries=3 \
  CMD node -e "process.exit(0)"

CMD ["node", "packages/api/dist/worker-entry.js"]
