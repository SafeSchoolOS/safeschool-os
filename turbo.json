{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalPassThroughEnv": [
    "DATABASE_URL",
    "REDIS_URL",
    "JWT_SECRET",
    "AUTH_PROVIDER",
    "NODE_ENV",
    "CLERK_SECRET_KEY",
    "CLERK_PUBLISHABLE_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "lint": {},
    "db:migrate": {},
    "db:seed": {
      "dependsOn": ["db:migrate"]
    }
  }
}
